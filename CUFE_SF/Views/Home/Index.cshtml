@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutX.cshtml";
}

<div class="jumbotron">
    <h1>CUFE Student Forum</h1>
    <p class="lead">CUFE Student Forum is a forum used to connect Cairo University students together.</p>
</div>

<!-- Login form -->
<div class="container">
    <form class="col-md-offset-4 col-sm-offset-4" action="LoginCheck" method="post" oninput="validateInput();">
        <div class="form-group">
            <label for="email">Username or Email:</label>
            <input type="text" class="form-control" id="email" name="UsernameOrEmail" placeholder="Username or Email">
        </div>
        <div class="form-group">
            <label for="pwd">Password:</label>
            <input type="password" class="form-control" name="Password" id="pwd" placeholder="Password">
        </div>
        <div class="btn-group" role="group" aria-label="...">
            <button type="submit" id="login" class="btn btn-default" formmethod="post" disabled="">Login</button>
            <div class="btn-group" role="group">
                <a class="btn btn-default" href="~/Register/Index">Register</a>
            </div>
        </div>
    </form>
    <br />
    <form class="col-md-offset-4 col-sm-offset-4" >
        <p><a class="btn btn-default" href="~/Login/ForgotPassword">Forgot Password ? </a></p>
    </form>
</div>

<script>
    function validateInput() {
        var ins = document.getElementsByTagName("input");
        var pass = true;

        for (var j = 0; j < ins.length; j++) {
            if (ins[j].value == "")
                pass = false;
        };

        if (pass) document.getElementById("login").removeAttribute("disabled");
        else {
            var att = document.createAttribute("disabled");
            document.getElementById("login").setAttributeNode(att);
        }
    };
</script>
