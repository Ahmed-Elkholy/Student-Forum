
@{
    ViewBag.Title = "ViewCourses";
    var list = ViewBag.list;
}

<div class="container"><h2><b>View Course</b></h2><br /></div>

<div class="container">
    <div class="well">
        <form action="SelectCourseDetails" method="get">
            <div class="alert alert-info" role="alert"><b>Heads up!</b> Press on the course you would like to view</div>
            @foreach (var item in list)
            {
                <button type="submit" class="btn btn-default" value="@item" name="Code">@item</button>
                <text>&nbsp;</text>
            }
        </form>
    </div>
</div>