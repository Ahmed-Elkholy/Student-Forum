
@{
    ViewBag.Title = "Reset Password";
}

<h2>Reset Password</h2>
<div class="alert alert-danger" role="alert"> Password Change failed please retry</div>
<div class="container">
    <form action="ChangePassword" method="get" oninput="validateInput();">

        <div class="form-group">
            <label for="pwd">New Password:</label>
            <input type="password" class="form-control" name="Password" id="pwd" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="pwd">Confirm New Password:</label>
            <input type="password" class="form-control" name="Password" id="cpwd" placeholder="Confirm Password">
        </div>
        <button type="submit" id="reset" class="btn btn-default" formmethod="get" disabled="">Reset Password</button>
    </form>
</div>

<script>
    function validateInput() {
        var ins = document.getElementsByTagName("input");
        var pass = true;
        for (var j = 0; j < ins.length; j++) {
            if (ins[j].value == "")
                pass = false;
        };
        var pwd = document.getElementById("pwd");
        var cpwd = document.getElementById("cpwd");
        if (pwd.value != cpwd.value) pass = false;

        if (pass) document.getElementById("reset").removeAttribute("disabled");
        else {
            var att = document.createAttribute("disabled");
            document.getElementById("reset").setAttributeNode(att);
        }
    };
</script>