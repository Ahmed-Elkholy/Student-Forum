@{
    ViewBag.Title = "SA Requests";
    var list = ViewBag.list;
    var count = ViewBag.count;
}

<div class="container"><h2><b>Student Activity Requests</b></h2><br /></div>
<div class="container">
    <form action="" method="post">
        @if (count == 0)
        {
            <h3>No Requests at the time</h3><br />
    
        }
        else
        {
            for (var i = 0; i < count / 3; i++)
            {
                <div class="panel panel-info">
                    <div class="panel-heading">@list[i * 3]</div>
                    <div class="panel-body">
                        <b>Email:</b> @list[i * 3 + 1] <br />
                        <b>About:</b> @list[i * 3 + 2] <br />

                        <button formaction="AcceptSARequest" type="submit" class="btn btn-default" value="@list[i * 3]" name="Username">Accept</button>
                        <button formaction="RejectSARequest" type="submit" class="btn btn-default" value="@list[i * 3]" name="Username">Reject</button>
                    </div>
                </div>
            }

        }
        </form>
        </div>